<%- include("../common/containers/header")-%>

<div class="bg-light py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-0"><a href="/">Trang chủ</a> <span class="mx-2 mb-0">/</span> <a href="/cart">Giỏ
          hàng</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Thanh toán</strong></div>
    </div>
  </div>
</div>

<div class="site-section">
  <div class="container">
    <form action="/order/create-order" method="POST">
      <div class="row mb-5">
        <div class="col-md-12">
          <div class="border p-4 rounded" role="alert">
            Bạn chưa đăng nhập? <a href="/login">Bấm vào đây</a> để đăng nhập
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-5 mb-md-0">
          <h2 class="h3 mb-3 text-black">Thông tin đặt hàng</h2>
          <div class="p-3 p-lg-5 border">
            <div class="form-group row">
              <div class="col-md-12">
                <label for="c_address" class="text-black">Họ tên <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="nameReceiver">
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-12">
                <label for="c_state_country" class="text-black">Địa chỉ <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="addressReceiver">
              </div>
            </div>
            <div class="form-group row mb-5">
              <div class="col-md-6">
                <label for="c_email_address" class="text-black">Email <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="emailReceiver">
              </div>
              <div class="col-md-6">
                <label for="c_phone" class="text-black">Số điện thoại <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="phoneReceiver">
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row mb-5">
            <div class="col-md-12">
              <h2 class="h3 mb-3 text-black">Đơn hàng của bạn</h2>
              <div class="p-3 p-lg-5 border">
                <table class="table site-block-order-table mb-5">
                  <thead>
                    <th>Sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số tiền</th>
                  </thead>
                  <tbody>
                    <% for (let cartItem of cartItems) { %>
                    <tr>
                      <td><%= cartItem.product.title %> <strong class="mx-2">x</strong> <%= cartItem.product.quantity %>
                      </td>
                      <td><%= cartItem.product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %>
                      </td>
                      <td><%= cartItem.amount.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
                    </tr>
                    <% } %>
                    <!-- <tr>
                    <td class="text-black font-weight-bold"><strong>Tổng tiền (chưa giảm)</strong></td>
                    <td class="text-black">$350.00</td>
                  </tr> -->
                    <tr>
                      <td class="text-black font-weight-bold"><strong>Tổng tiền</strong></td>
                      <td></td>
                      <td class="text-black font-weight-bold">
                        <strong><%= cartTotal.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></strong>
                      </td>
                    </tr>
                  </tbody>
                </table>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary btn-lg btn-block">Đặt hàng</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include("../common/containers/footer") -%>

</body>

</html>