<%- include("header")-%>
<div class="container">
<div class="card card-register mx-auto mt-5">
  <div class="card-header">Đăng kí tài khoản</div>
  <div class="card-body">
    <form>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-6">
            <div class="form-label-group">
              <input type="text" id="name" class="form-control" placeholder="Họ tên" required="required" autofocus="autofocus">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-label-group">
              <input type="number" id="lastName" class="form-control" placeholder="Số điện thoại" required="required">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-label-group">
          <input type="email" id="inputEmail" class="form-control" placeholder="Email" required="required">
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-6">
            <div class="form-label-group">
              <input type="password" id="inputPassword" class="form-control" placeholder="Mật khẩu" required="required">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-label-group">
              <input type="password" id="confirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" required="required">
            </div>
          </div>
        </div>
      </div>
      <a class="btn btn-primary btn-block" href="">Đăng kí</a>
    </form>
    <div class="text-center">
      <a class="d-block small mt-3" href="/login">Đăng nhập</a>
      <a class="d-block small" href="/forgot">Quên mật khẩu?</a>
    </div>
  </div>
</div>
<%- include("footer") -%>
