<%- include("../common/containers/header")-%>
<div class="custom-border-bottom py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-0"><a href="/">Trang chủ</a> <span class="mx-2 mb-0">/</span> <strong
          class="text-black">Hóa đơn</strong></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="view-account">
    <section class="module">
      <div class="module-inner">
        <div class="side-bar">
          <nav class="side-menu">
            <ul class="nav">
              <li><a href="/user/profile"><span class="fa fa-user"></span> Thông tin cá nhân </a></li>
              <li class="active"><a href=""><span class="fa fa-credit-card"></span> Đơn đặt hàng</a></li>
            </ul>
          </nav>
        </div>
        <div class="content-panel">
          <div class="container">
            <div class="row mb-5">
              <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th class="product-thumbnail">Đơn hàng</th>
                        <th class="product-name">Ngày đặt hàng</th>
                        <th class="product-price">Tổng số tiền</th>
                        <th class="product-quantity">Trạng thái</th>
                        <th class="product-total">Thanh toán</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (let order of orders) { %>
                      <tr>
                        <td class="product-thumbnail">
                          <h4><a href="/order/history/<%= order._id %>"><%= order._id %></a></h4>
                        </td>
                        <td class="product-name">
                          <h5 class="text-black"><%= order.dateCreated.toLocaleString() %></h5>
                        </td>
                        <td><%= order.total.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
                        <td><%= order.status %></td>
                        <td><%= order.paid %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
<%- include("../common/containers/footer") -%>

</body>

</html>